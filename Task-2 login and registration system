#include <iostream>
#include <fstream>
#include <string>

using namespace std;


struct User {
    string username;
    string password;
};

bool isValidUser(const std::string& username, const std::string& password) {
    std::string namePassword[10] = { "admin","password","hadi","password2","usman","password3","haya","password4","imama","password5" };

   
    for (int i = 0; i < 10; i += 2) {
        if (username == namePassword[i] && password == namePassword[i + 1]) {
            return true; 
        }
    }

    return false;
}

int main(){
 
    string username, password;
    cout << "\n              TASK -2\n\n";
    cout << "Enter username: ";
    cin >> username;

    cout << "Enter password: ";
    cin >> password;

    if (isValidUser(username, password)) {
        cout << "Login successful!" << endl;


        ofstream file(username + ".txt");
        if (file.is_open()) {
            file << "Welcome, " << username << "!" << endl;
            file.close();
            cout << "File created successfully!" << endl;
        }
        else {
            cout << "Failed to create file!" << endl;
        }
    }
    else {
        cout << "Invalid username or password!" << endl;
    }

    return 0;
}
